<aura:component >
   <lightning:card iconName="standard:account">
       <aura:set attribute="title">
           ACCOUNT <br></br>
           Gopal Info Tech Pvt Ltd
      </aura:set>
       
       <aura:set attribute="actions">
           <lightning:buttonGroup>
           <lightning:button label="New" variant="brand"/>
           <lightning:button label="Import" variant="base"/>
           <lightning:button label="New Task" variant="destructive" iconName="utility:activity"/>
           <lightning:button label="New Event"/>
               <lightning:buttonIcon iconName="utility:alert" alternativeText="notification" size="large"/>
               <lightning:buttonmenu iconName="utility:chevrondown" alternativetext="down">
                   <lightning:menuitem label="Account"/>
                   <lightning:menuitem label="Contact"/>
                   <lightning:menuitem label="Opportunity"/>
              </lightning:buttonmenu>
          </lightning:buttonGroup>
      </aura:set>
       <aura:set attribute="footer">
           <lightning:button label="save"/>
           <lightning:button label="cancel"/>
      </aura:set>
  </lightning:card>
</aura:component>