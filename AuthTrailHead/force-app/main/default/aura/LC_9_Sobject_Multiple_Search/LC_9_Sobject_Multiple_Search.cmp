<aura:component controller="LT_9_SobjectMultiple_Search">
    <aura:attribute name="accounts" type="Account[]"/>
    <aura:attribute name="searchtext" type="string"/>
    <aura:attribute name="colums" type="list"/>
    <aura:handler name="init" value="{!this}" action="{!c.show}"/>
    
    <lightning:card>
        <aura:set attribute="title">
            <lightning:layout>
                <lightning:layoutItem size="2" padding="small-around">
                    Name : <lightning:input value="{!v.searchtext}"/>
                </lightning:layoutItem>
                
                <lightning:layoutItem size="1" padding="small-around">
                    <lightning:button label="search" onclick="{!c.callme}"/>
                </lightning:layoutItem>
            </lightning:layout>
            
            <lightning:layout multipleRows="True">
                <aura:iteration items="{!v.accounts}" var="a">
                    <lightning:layoutitem size="3" padding="around-small">
                        Name  : {!a.Name} <br/>
                        Phone  : {!a.Phone} <br/>
                        Industry  : {!a.Industry} <br/>
                        Rating  : {!a.Rating} <br/>
                    </lightning:layoutitem>
                </aura:iteration>
            </lightning:layout>
            
            <aura:if isTrue="{!v.accounts.lenght > 0}">
                <lightning:layout multipleRows="True">
                    <lightning:datatable keyField="id" data="{!v.accounts}" columns="{!v.colums}" hideCheckboxColumn="true"/>
                </lightning:layout>
            </aura:if>
        </aura:set>
    </lightning:card>
</aura:component>