<aura:component >
    <aura:attribute name="stdname" type="string"/>
    <aura:attribute name="stdage" type="integer"/>
    <aura:attribute name="stdfee" type="decimal" default="20000"/> //systemoverride//
    <aura:handler name="init" value="{!this}" action="{!c.show}"/>
    <lightning:card title="student details">
        student name:{!v.stdname}<br></br>
        student age:{!v.stdage}<br></br>
        student fee:{!v.stdfee}<br></br>
        <aura:set attribute ="actions">
            <lightning:button label="submit" onclick="{!c.save}"/>
            <lightning:button label="loss" onclick="{!c.clear}"/>
        </aura:set>
    </lightning:card>
</aura:component>