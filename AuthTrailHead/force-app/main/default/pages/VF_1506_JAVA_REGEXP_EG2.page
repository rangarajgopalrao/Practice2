<apex:page id="P1">
    <script>
    	function checkfield()
    {
        var a = document.getElementById("P1:F1:PB1:PBS1:TX1").value;
        var regexp = /^([0-9 a-d + @ *A-C]+)$/;  // in bracket u can write any thing(case sensitive) //
        if(regexp.test(a) != true)
        {
            document.getElementById("P1:F1:PB1:PBS1:TX1").value=' ';
            document.getElementById("P1:F1:PB1:PBS1:TX1").focus();
            alert('the phone number is integer');
        }
        
    }
    </script>
    <apex:form id="F1">
        <apex:pageBlock title="Employ details" id="PB1">
            <apex:pageBlockSection id="PBS1">
                ENTER PHONE : <apex:inputText onchange="checkfield()" id="TX1"/>
           </apex:pageBlockSection>
       </apex:pageBlock>
   </apex:form>
</apex:page>